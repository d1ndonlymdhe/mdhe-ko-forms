generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider             = "sqlite"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model Example {
  id String @id @default(cuid())
}

model User {
  id        String      @id @default(cuid())
  username  String
  password  String
  salt      String
  forms     Form[]
  userToken userToken[]
}

model userToken {
  id     String @id @default(cuid())
  userId String
  value  String
  user   User   @relation(fields: [userId], references: [id])
}

model Form {
  id          String        @id @default(cuid())
  ownerId     String
  title       String
  description String
  owner       User          @relation(fields: [ownerId], references: [id])
  elements    FormElement[]
}

model FormElement {
  id        String           @id @default(cuid())
  type      String
  formId    String
  name      String
  label     String
  default   String?
  required  Boolean?
  key       String
  form      Form             @relation(fields: [formId], references: [id])
  elOptions ElementOptions[]
  values    Value[]
}

model ElementOptions {
  id        String      @id @default(cuid())
  elementId String
  option    String
  element   FormElement @relation(fields: [elementId], references: [id])
}

model Value {
  id        String      @id @default(cuid())
  elementId String
  element   FormElement @relation(fields: [elementId], references: [id])
  value     String
}
